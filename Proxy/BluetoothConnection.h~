using namespace std;

class BluetoothConnection
{
  int s;
  int status;
  string address;
 public:
  BluetoothConnection();
  BluetoothConnection(string addr);
  int init(string addr);
  int establishConnection();
  int getStatus();
  string getAddress();
  int sendMessage(char* msg);
  char* readMessage();
};

